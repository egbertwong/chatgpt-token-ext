{
    "manifest_version": 3,
    "name": "AI Token Counter (ChatGPT & Gemini)",
    "version": "1.1.0",
    "description": "Count tokens on ChatGPT and Gemini web using local tokenizers.",
    "content_scripts": [
        {
            "matches": [
                "https://chat.openai.com/*",
                "https://chatgpt.com/*",
                "https://gemini.google.com/*"
            ],
            "js": [
                "dist/content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "permissions": [],
    "host_permissions": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*"
    ]
}